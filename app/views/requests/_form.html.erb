<%= form_for @request do |f| %>
  <div class="field">
    <div class="control">
      <%= f.text_field :title, class: "input", required: true %>
    </div>
  </div>

  <div class="field">
    <label class="label">Message</label>
    <div class="control">
      <%= f.text_area :content, class: "textarea" %>
    </div>
  </div>
  
  <div class="column is-1 is-offset-11">
    <%= f.submit "Publicar", class: "button" %>
  </div>
<% end %>