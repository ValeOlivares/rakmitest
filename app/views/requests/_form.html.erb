<%= form_for @request do |f| %>
  <div class="field">
    <div class="control">
    <label class="label">Ingresa tu requerimiento</label>
      <%= f.text_field :title, class: "input", required: true %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.trix_editor :content, required: true, autofocus: true %>
    </div>
  </div>
  
  <div class="column is-1 is-offset-11">
    <%= f.submit "Publicar", class: "button" %>
  </div>
<% end %>